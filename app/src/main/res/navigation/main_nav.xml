<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/fragmentCharacters">

    <fragment
        android:id="@+id/fragmentCharacters"
        android:name="com.adolfo.marvel.features.character.view.fragments.CharactersListFragment"
        android:label="@string/empty"
        tools:layout="@layout/fragment_characters">

        <action
            android:id="@+id/action_list_to_detail"
            app:destination="@id/fragmentCharacterDetail" />

    </fragment>

    <fragment
        android:id="@+id/fragmentCharacterDetail"
        android:name="com.adolfo.marvel.features.character.view.fragments.CharacterDetailFragment"
        tools:layout="@layout/fragment_character_detail">

        <argument
            android:name="characterDetail"
            app:argType="com.adolfo.characters.data.models.view.CharacterView"
            app:nullable="true" />

    </fragment>

</navigation>
